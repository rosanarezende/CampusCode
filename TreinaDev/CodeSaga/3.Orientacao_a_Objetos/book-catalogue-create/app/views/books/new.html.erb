<%= form_for Book.new do |f| %>
  
  <%= f.label :title, "Título" %>
  <%= f.text_field :title %>
  <br><br>

  <%= f.label :author, "Autora" %>
  <%= f.text_field :author %>
  <br><br>

  <%= f.label :publication_year, "Ano de publicação" %>
  <%= f.number_field :publication_year %>
  <br><br>

  <%= f.label :abstract, "Resumo" %>
  <%= f.text_area :abstract %>
  <br><br>

  <%= f.label :genre, "Gênero" %>
  <%= f.text_field :genre %>
  <br><br>

  <%= f.submit "Enviar" %>
<% end %>
